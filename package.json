{
    "name": "monorepo",
    "private": true,
    "scripts": {
        "format": "prettier --write \"frontend/**/*.{js,jsx,ts,tsx,json,md}\" \"backend/**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"frontend/**/*.{js,jsx,ts,tsx,json,md}\" \"backend/**/*.{js,jsx,ts,tsx,json,md}\"",
        "prepare": "husky install"
    },
    "devDependencies": {
        "prettier": "^2.3.2",
        "husky": "^8.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0"
    }
}
